{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,                /* 開啟所有嚴格檢查 */
    "noImplicitAny": true,         /* 禁止隱含的 any */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true      /* 強制函數必須回傳值 */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}